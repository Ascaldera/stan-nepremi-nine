<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_edited" model="ir.ui.view"> 
        <field name="name">crm_lead_edited</field> 
        <field name="model">crm.lead</field> 
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/> 
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="tip_priloznosti"/>
                <field name="nepremicnina"/> 
                <field name="domain_test"/>
            </xpath>
        </field>
    </record>
    
    <record id="crm_lead_edited_kanban" model="ir.ui.view">
        <field name="name">crm_lead_edited_kanban</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="before">
                <field name="partner_id"/>
                <br></br>
                <field name="tip_priloznosti"/>
                <field name="nepremicnina"/> 
            </xpath>
            <xpath expr="//div[@class='text-muted o_kanban_record_subtitle']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="planned_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>          
            </xpath>
        </field>
    </record>
    
    <record id="crm_quick_create_edit" model="ir.ui.view"> 
        <field name="name">Crm quick create edited</field> 
        <field name="model">crm.lead</field> 
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/> 
        <field name="arch" type="xml">
		<xpath expr="//field[@name='partner_id']" position="after">
			<field name="tip_priloznosti"/>
            <field name="vrsta" attrs ="{'required':1}"/>
            <field name="tip" attrs ="{'invisible':1}"/>
            <field name="tip_1" string="Tip nepremičnine" attrs ="{'invisible':[('vrsta','!=','stanovanje')],'required':[('vrsta','==','stanovanje')]
}"/>
            <field name="tip_2" string="Tip nepremičnine" attrs ="{'invisible':[('vrsta','!=','hisa')],'required':[('vrsta','==','hisa')]}"/>
            <field name="tip_3" string="Tip nepremičnine" attrs ="{'invisible':[('vrsta','!=','poslovni')],'required':[('vrsta','==','poslovni')]}"/>
            <field name="regija" string="Regija" attrs ="{'required':1}"/>
            <field name="upravna_enota" attrs ="{'invisible':1}"/>
            <field name="upravne_enote_1" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'dolenjska')],'required':[('regija','==','dolenjska')]}"/>
            <field name="upravne_enote_2" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'gorenjska')],'required':[('regija','==','gorenjska')]}"/>
            <field name="upravne_enote_3" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'juzna_primorska')],'required':[('regija','==','juzna_primorska')]}"/>
            <field name="upravne_enote_4" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'severna_primorska')],'required':[('regija','==','severna_primorska')]}"/>
            <field name="upravne_enote_5" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'koroska')],'required':[('regija','==','koroska')]}"/>
            <field name="upravne_enote_6" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'lj_mesto')],'required':[('regija','==','lj_mesto')]}"/>
            <field name="upravne_enote_7" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'lj_okolica')],'required':[('regija','==','lj_okolica')]}"/>
            <field name="upravne_enote_8" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'notranjska')],'required':[('regija','==','notranjska')]}"/>
            <field name="upravne_enote_9" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'podravska')],'required':[('regija','==','podravska')]}"/>
            <field name="upravne_enote_10" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'pomurska')],'required':[('regija','==','pomurska')]}"/>
            <field name="upravne_enote_11" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'posavska')],'required':[('regija','==','posavska')]}"/>
            <field name="upravne_enote_12" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'savinjska')],'required':[('regija','==','savinjska')]}"/>
            <field name="upravne_enote_13" string="Upravna enota" attrs ="{'invisible':[('regija','!=', 'zasavska')],'required':[('regija','==','zasavska')]}"/>
            <field name="cena_od"/>
            <field name="cena_do"/>
            <field name="velikost_od"/>
            <field name="velikost_do"/>
            <field name="letnik_od"/>
            <field name="letnik_do"/>
		</xpath>
        </field>
    </record>
    
</odoo>